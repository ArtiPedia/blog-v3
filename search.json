---
---
[
  {% for post in site.posts %}
    {
      "tags"     : "{{ post.tags | join: ', ' }}",
      "title"    : "{{ post.title | escape }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
      "discription" : "{{post.description | escape }}",
      "content" : "{{post.content | strip_html | strip_newlines | escape }}"
      
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]